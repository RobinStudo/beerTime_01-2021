{% extends 'base.html.twig' %}

{% block title %}Créer un événement - {{ parent() }}{% endblock %}

{% block body %}
    <h1>Créer un événement</h1>

    {% form_theme form 'bootstrap_4_layout.html.twig' %}
    <div class="container-fluid">
        {{ form_start( form ) }}

        <div class="row">
            <div class="col-12">
                {{ form_row( form.name ) }}
            </div>
            <div class="col-6">
                {{ form_row( form.startAt ) }}
                {{ form_row( form.endAt ) }}
            </div>
            <div class="col-6">
                {{ form_row( form.description ) }}
                {{ form_row( form.picture ) }}
            </div>
            <div class="col-6">
                {{ form_row( form.price ) }}
                {{ form_row( form.capacity ) }}
                {{ form_row( form.place ) }}
            </div>
            <div class="col-6">
                {{ form_row( form.categories ) }}
            </div>
        </div>

        <button type="submit" class="btn btn-primary my-4">Créer</button>
        {{ form_end( form ) }}
    </div>
{% endblock %}
