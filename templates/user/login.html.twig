{% extends 'base.html.twig' %}

{% block title %}Connexion - {{ parent() }}{% endblock %}

{% block body %}
<div class="container">
    <h1>Connexion</h1>

    <form method="post">
        <input type="email" name="_username" placeholder="E-mail" class="form-control my-4">
        <input type="password" name="_password" placeholder="Mot de passe" class="form-control my-4">

        <button type="submit" class="btn btn-primary mb-4">Connexion</button>
    </form>

</div>
{% endblock %}
